<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">

	<t:form t:method="POST" t:id="fLogin">
		<table align="center">
			<tr>
				<td>
					Student ID:
				</td>
				<td>
					<t:textfield t:id="studentLoginID"/>
				</td>
			</tr>
			<tr>
				<td>
					Password:
				</td>
				<td>
					<t:passwordfield t:id="studentLoginPass" /> 
				</td>
			</tr>
			<tr>
				<td>

				</td>
				<td>
					<t:submit t:id="submitLogin" value="Login" />&nbsp;
				</td>
			</tr>
		</table>
		<t:errors/>
	</t:form>
</html>