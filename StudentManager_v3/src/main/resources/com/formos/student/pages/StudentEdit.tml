<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">

	<t:form t:method="POST" t:id="fStudent">
		<table>
			<tr>
				<td>
					Student ID:
				</td>
				<td>
					<t:textfield t:id="studentID" t:value="student.studentID" />
				</td>
			</tr>
			<tr>
				<td>
					
				</td>
				<td>
					<t:actionlink t:id="changePassword">Change password</t:actionlink>
				</td>
			</tr>
			<tr>
				<td>
					First Name:
				</td>
				<td>
					<t:textfield t:id="firstName" t:value="student.firstName" />
				</td>
			</tr>
			<tr>
				<td>
					Middle Name:
				</td>
				<td>
					<t:textfield t:id="middleName" t:value="student.middleName" />
				</td>
			</tr>
			<tr>
				<td>
					Last Name:
				</td>
				<td>
					<t:textfield t:id="lastName" t:value="student.lastName" />
				</td>
			</tr>
			<tr>
				<td>
					Sex:
				</td>
				<td>
					<t:select t:id="sex" blankOption="NEVER" model="literal:Male,Female" value="student.sex"/>
				</td>
			</tr>			
			<tr>
				<td>
					Married:
				</td>
				<td>
					<t:checkbox t:id="married" value="student.married"/>
				</td>
			</tr>
			<tr>
				<td>
					Birthday:
				</td>
				<td>
					<t:datefield t:id="birthday" t:value="student.birthday" />
				</td>
			</tr>
			<tr>
				<td>
					Phone:
				</td>
				<td>
					<t:textfield t:id="phone" t:value="student.phone" />
				</td>
			</tr>
			<tr>
				<td>
					Address:
				</td>
				<td>
					<t:textfield t:id="address" t:value="student.address"/>
				</td>
			</tr>
			<tr>
				<td>

				</td>
				<td>
					<t:submit t:id="submitSave" value="Update" />&nbsp;
					<t:submit t:id="submitCancel" value="Cancel" />
				</td>
			</tr>
		</table>
		<t:errors />
	</t:form>
</html>